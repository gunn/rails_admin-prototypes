!!! Strict
%html{:lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title ACTIVO / full preview
    %link{:href => "http://activo.dmfranc.com/favicon.png", :rel => "shortcut icon"}
    = stylesheet_link_tag *%w[base jquery-ui formtastic jquery.tipsy uniform.default]
    %link#current-theme{:href => "stylesheets/themes/activo/style.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    = javascript_include_tag *%w[http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js jquery-ui.min jquery.scrollTo jquery.localscroll application jquery.tipsy  jquery.uniform.min]  
  %body
    #container
      #header
        %h1
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}
                %img{:alt => "Dashboard", :src => "stylesheets/themes/activo/images/session/home.png", :title => "Dashboard"}/
            %li
              %a{:href => "#"}
                %img{:alt => "Profile", :src => "stylesheets/themes/activo/images/session/account.png", :title => "Profile"}/
            %li
              %a{:href => "#"}
                %img{:alt => "Preferences", :src => "stylesheets/themes/activo/images/session/config.png", :title => "Preferences"}/
            %li
              %a{:href => "#"}
                %img{:alt => "Logout", :src => "stylesheets/themes/activo/images/session/logout.png", :title => "Logout"}/
        #main-navigation
          %ul.wat-cf
            %li.first
              %a.anchor{:href => "#block-text"} Main Page
            %li.active
              %a.anchor{:href => "#block-text"} Active
            %li
              %a.anchor{:href => "#block-login"} Login
            %li
              %a.anchor{:href => "#block-signup"} Signup
      #box
        = yield